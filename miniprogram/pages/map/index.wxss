/* pages/map/index.wxss */
.mapContainer {
	background-color: #1c319c;
	color: #fff;
	font-family: "阿";
}

.topTab {
	display: flex;
	align-items: center;
	justify-content: space-around;
	height: 160rpx;
	background-color: #1c319c;
	font-family: "阿";
	font-size: 55rpx;
}
.carTab {
	box-sizing: border-box;
	border-bottom: 3px solid rgba(4, 255, 25, 0);

}
.dinnerTab {
	border-bottom: 3px solid rgb(255, 255, 255);

}
.placeTab {
	border-bottom: 3px solid rgb(255, 255, 255);

}
.contentContainer {
	background-color: #fff;
	border-radius: 39rpx;
	padding: 0rpx 25rpx 20rpx; 
	box-sizing: border-box;
	

}
.contentContainer2 {
	background-color: #fff;
	border-radius: 39rpx;
	padding: 0rpx 25rpx 20rpx; 
	box-sizing: border-box;
	background-size: 100% 100%;
	height: 1298rpx;

}
.contentContainer3 {
	background-color: #fff;
	padding: 30rpx 0;
	border-radius: 39rpx;
}
.car {
	background-size: 100% 100%;
	height: 1465rpx;
}
.dinner {
	
	color: #000;
	padding: 40rpx 20rpx 0 ;
	box-sizing: border-box;
}
.sevenContainer {
	margin-bottom: 40rpx;
}

.title {
	background-size: 100% 100%;
	height: 70rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 440rpx;
	padding-left: 20rpx;
	font-size: 35rpx;
}
.starAndTime {
	display: flex;
	align-items: center;
	margin-top: 40rpx;
}
.star {
	width: 25rpx;
	height: 25rpx;
	margin-left: 50rpx;
}
.timeTitle {
	margin-left: 10rpx;
	font-size: 32rpx;
}
.text {
	color: #1c319c;
	font-size: 24rpx;
	margin-left: 50rpx;
	margin: 18rpx 0 0 50rpx;
}
.pic1 {
	width: 700rpx;
	height: 663rpx;
	margin: 0 0 20rpx 25rpx;
}
.pic2 {
	width: 700rpx;
	height: 513rpx;
	margin: 0 0 0rpx 25rpx;
}
.picTitle {
  background: linear-gradient(to bottom,#3368c7,#0bb7fd);
  width: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
	font-size: 40rpx;
  margin: 20rpx auto 30rpx;
  border-radius: 25rpx;
}
.smallTitle {
  color: black;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}